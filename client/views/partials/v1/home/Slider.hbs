<!-- START SLIDER SECTION -->
{{#if homeData.banners}}
    <div id="top" class="home-slider-section section">
        <div class="container">
            <!-- Home Slider -->
            <div id="home-slider" class="slides">
                {{#each homeData.banners}}
                    {{#if image.data.attributes}}
                        <img src="{{resourceUrl image.data.attributes.url}}"
                             alt="{{image.data.attributes.name}}"
                             title="#slider-caption-{{@index}}"/>
                    {{/if}}
                {{/each}}
            </div>
            {{#each homeData.banners}}
                {{#if image.data.attributes}}
                    <!-- Caption 1 -->
                    <div id="slider-caption-{{@index}}" class="nivo-html-caption">
                        <div class="row">
                            <div class="hero-slider-content-2 col-lg-6 offset-lg-6 col-md-7 offset-md-5 col-12">
                                <h1 class="wow fadeInUp" data-wow-duration="1s" data-wow-delay="0.5s">
                                    {{subTitle}}
                                    <span>{{title}}</span>
                                </h1>
                                <a href="{{link}}" class="wow fadeInUp" data-wow-duration="1s" data-wow-delay="1s">
                                    {{buttonText}}
                                </a>
                            </div>
                        </div>
                    </div>
                {{/if}}
            {{/each}}
        </div>
    </div>
{{/if}}
<!-- END SLIDER SECTION -->
